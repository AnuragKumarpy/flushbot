# FlushBot Environment Configuration for Azure Production
# Copy this file to .env and fill in your actual values

# ======================
# BOT CONFIGURATION  
# ======================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
BOT_USERNAME=your_bot_username

# ======================
# ADMIN CONFIGURATION  
# ======================
SUDO_USER_ID=YOUR_TELEGRAM_USER_ID

# ======================
# AI API CONFIGURATION
# ======================
# Primary AI API (Grok-4 via OpenRouter)
OPENROUTER_GROK_KEY=YOUR_GROK_API_KEY_HERE

# Fallback AI API (Gemini 2.0 via OpenRouter) 
OPENROUTER_GEMINI_KEY=YOUR_GEMINI_API_KEY_HERE

# OpenRouter Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
GROK_MODEL=x-ai/grok-beta
GEMINI_MODEL=google/gemini-2.0-flash-exp

# ======================
# DATABASE CONFIGURATION (Azure PostgreSQL)
# ======================
DATABASE_URL=postgresql://username:password@hostname:5432/flushbot
# Example: postgresql://flushbot:your_password@flushbot-db.postgres.database.azure.com:5432/flushbot

# ======================
# REDIS CONFIGURATION (Azure Redis Cache)
# ======================
REDIS_URL=redis://your-redis.redis.cache.windows.net:6380
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DB=0

# ======================
# SECURITY & PERFORMANCE
# ======================
DEBUG=false
LOG_LEVEL=INFO
ENABLE_BATCH_PROCESSING=false

# Cache Configuration
CACHE_TTL=3600
MESSAGE_CACHE_SIZE=1000
BATCH_PROCESSING_SIZE=50
BATCH_INTERVAL_MINUTES=5

# API Quota Management
DAILY_API_QUOTA=1000
HOURLY_API_QUOTA=100
API_RATE_LIMIT=10
QUOTA_RESET_HOUR=0

# ======================
# AZURE SPECIFIC
# ======================
# Set to production for Azure deployment
ENVIRONMENT=production

# Azure Container Instances
PORT=8000

# Health Check
HEALTH_CHECK_INTERVAL=300

# ======================
# LOGGING CONFIGURATION
# ======================
LOG_FILE_PATH=/app/logs/flushbot.log
MAX_LOG_FILE_SIZE=50MB
LOG_RETENTION_DAYS=30