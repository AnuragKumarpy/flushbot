# FlushBot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ======================
# BOT CONFIGURATION
# ======================
TELEGRAM_BOT_TOKEN=?????
BOT_USERNAME=????

# ======================
# ADMIN CONFIGURATION  
# ======================
SUDO_USER_ID=?????

# ======================
# AI API CONFIGURATION
# ======================
# Primary AI API (Grok-4 via OpenRouter)
OPENROUTER_GROK_KEY=?????

# Fallback AI API (Gemini 2.0 via OpenRouter) 
OPENROUTER_GEMINI_KEY=???????

# OpenRouter Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
GROK_MODEL=x-ai/grok-beta
GEMINI_MODEL=google/gemini-2.0-flash-exp

# ======================
# DATABASE CONFIGURATION
# ======================
# SQLite (default for development)
DATABASE_URL=sqlite:///flushbot.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/flushbot

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ======================
# CACHE CONFIGURATION
# ======================
CACHE_TTL=3600
MESSAGE_CACHE_SIZE=1000
BATCH_PROCESSING_SIZE=50

# ======================
# API QUOTA MANAGEMENT
# ======================
DAILY_API_QUOTA=1000
HOURLY_API_QUOTA=100
API_RATE_LIMIT=10
QUOTA_RESET_HOUR=0

# ======================
# SECURITY CONFIGURATION
# ======================
DEFAULT_SECURITY_LEVEL=medium
EXTREME_MODE_ENABLED=true
AUTO_DELETE_VIOLATIONS=true
LOG_ALL_MESSAGES=false

# ======================
# BATCH PROCESSING
# ======================
ENABLE_BATCH_PROCESSING=true
BATCH_INTERVAL_MINUTES=30
CSV_EXPORT_PATH=./data/exports/
PARQUET_SUPPORT=true

# ======================
# LOGGING CONFIGURATION
# ======================
LOG_LEVEL=INFO
LOG_FILE=./logs/flushbot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ======================
# PERFORMANCE SETTINGS
# ======================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
BACKOFF_FACTOR=2

# ======================
# FEATURE FLAGS
# ======================
ENABLE_BOT_DETECTION=true
ENABLE_HISTORICAL_ANALYSIS=true
ENABLE_METRICS=true
ENABLE_WEBHOOKS=false

# ======================
# DEVELOPMENT SETTINGS
# ======================
DEBUG=false
TESTING=false
MOCK_AI_RESPONSES=false
