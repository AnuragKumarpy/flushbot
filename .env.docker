# Docker Environment Variables for FlushBot
# Copy this to .env and fill in your values

# ======================
# BOT CONFIGURATION
# ======================
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
SUDO_USER_ID=your_telegram_user_id

# ======================
# AI API CONFIGURATION
# ======================
OPENROUTER_GROK_KEY=your_grok_api_key
OPENROUTER_GEMINI_KEY=your_gemini_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
GROK_MODEL=x-ai/grok-beta
GEMINI_MODEL=google/gemini-2.0-flash-exp

# ======================
# DATABASE CONFIGURATION
# ======================
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://flushbot:flushbot_secure_2024@postgres:5432/flushbot
POSTGRES_DB=flushbot
POSTGRES_USER=flushbot
POSTGRES_PASSWORD=flushbot_secure_2024

# For SQLite (development only)
# DATABASE_URL=sqlite:///flushbot.db

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_URL=redis://:flushbot_redis_2024@redis:6379/0
REDIS_PASSWORD=flushbot_redis_2024

# ======================
# SECURITY CONFIGURATION  
# ======================
DEFAULT_SECURITY_MODE=medium
ENABLE_BATCH_PROCESSING=false
DAILY_API_QUOTA=1000
HOURLY_API_QUOTA=100

# ======================
# MONITORING & LOGGING
# ======================
LOG_LEVEL=INFO
DEBUG=false

# ======================
# OPTIONAL: MONITORING
# ======================
GRAFANA_PASSWORD=secure_grafana_password_2024